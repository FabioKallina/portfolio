
# Server Configuration
PORT=3000  # Port where the app runs

# MongoDB Connection
MONGO_URI=your_mongodb_connection_string_here  # Example: mongodb+srv://username:password@cluster.mongodb.net/NoteTakingApp

# Secret Keys
SECRET=your_random_generated_secret_here  # Generate a random string, e.g., `openssl rand -hex 32`

# Auth0 Configuration
BASE_URL=http://localhost:3000  # The base URL of your app
CLIENT_ID=your_auth0_client_id_here  # Get this from your Auth0 dashboard
ISSUER_BASE_URL=your_auth0_domain_here  # Example: https://your-auth0-domain.us.auth0.com